<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_menu"
    app:startDestination="@id/nav_inicio">

    <fragment
        android:id="@+id/nav_inicio"
        android:name="com.example.inmobiliaria.ui.inicio.InicioFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_inicio" />

    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.example.inmobiliaria.ui.perfil.PerfilFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_perfil">
        <action
            android:id="@+id/action_nav_perfil_to_CambiarClaveFragment"
            app:destination="@id/CambiarClaveFragment" />
    </fragment>

    <fragment
        android:id="@+id/CambiarClaveFragment"
        android:name="com.example.inmobiliaria.ui.perfil.CambiarClaveFragment"
        android:label="@string/menu_cambiar_clave"
        tools:layout="@layout/fragment_cambiar_clave" />

    <!-- INMUEBLES (lista) -->
    <fragment
        android:id="@+id/nav_inmuebles"
        android:name="com.example.inmobiliaria.ui.inmuebles.InmuebleFragment"
        android:label="@string/menu_inmuebles"
        tools:layout="@layout/fragment_inmueble">
        <action
            android:id="@+id/action_nav_inmuebles_to_nav_inmueble_detalle"
            app:destination="@id/nav_inmueble_detalle" />
    </fragment>

    <!-- DETALLE INMUEBLE -->
    <fragment
        android:id="@+id/nav_inmueble_detalle"
        android:name="com.example.inmobiliaria.ui.inmuebles.InmuebleDetalleFragment"
        android:label="@string/titulo_detalle_inmueble"
        tools:layout="@layout/fragment_inmueble_detalle">
        <argument
            android:name="inmuebleId"
            app:argType="integer" />
    </fragment>

    <!-- INQUILINOS (lista desde contratos) -->
    <fragment
        android:id="@+id/nav_inquilinos"
        android:name="com.example.inmobiliaria.ui.inquilinos.InquilinosFragment"
        android:label="@string/menu_inquilinos"
        tools:layout="@layout/fragment_inquilinos">
        <action
            android:id="@+id/action_nav_inquilinos_to_nav_inquilino_detalle"
            app:destination="@id/nav_inquilino_detalle" />
    </fragment>

    <!-- DETALLE INQUILINO (por contrato) -->
    <fragment
        android:id="@+id/nav_inquilino_detalle"
        android:name="com.example.inmobiliaria.ui.inquilinos.InquilinoDetalleFragment"
        android:label="@string/titulo_detalle_inquilino"
        tools:layout="@layout/fragment_inquilino_detalle">
        <argument
            android:name="contratoId"
            app:argType="integer" />
    </fragment>

    <!-- CONTRATOS (lista) -->
    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.example.inmobiliaria.ui.contratos.ContratoFragment"
        android:label="@string/menu_contratos"
        tools:layout="@layout/fragment_contrato">
        <action
            android:id="@+id/action_nav_contratos_to_nav_contrato_detalle"
            app:destination="@id/nav_contrato_detalle" />
    </fragment>

    <!-- DETALLE CONTRATO -->
    <fragment
        android:id="@+id/nav_contrato_detalle"
        android:name="com.example.inmobiliaria.ui.contratos.ContratosDetalleFragment"
        android:label="@string/titulo_detalle_contrato"
        tools:layout="@layout/fragment_contratos_detalle">
        <argument
            android:name="contratoId"
            app:argType="integer" />
    </fragment>

    <!-- (opcional) Pagos si lo necesitÃ¡s -->
    <fragment
        android:id="@+id/nav_pagos"
        android:name="com.example.inmobiliaria.ui.pagos.PagoFragment"
        android:label="@string/menu_pagos"
        tools:layout="@layout/fragment_pago">
        <argument
            android:name="contratoId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.inmobiliaria.ui.logout.LogoutFragment"
        android:label="@string/menu_logout"
        tools:layout="@layout/fragment_logout" />
</navigation>
