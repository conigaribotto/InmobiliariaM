<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_menu"
    app:startDestination="@id/nav_perfil">

    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.example.inmobiliaria.ui.perfil.PerfilFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_perfil">
        <action
            android:id="@+id/action_nav_perfil_to_cambiarClaveFragment"
            app:destination="@id/cambiarClaveFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_inmuebles"
        android:name="com.example.inmobiliaria.ui.inmuebles.InmuebleFragment"
        android:label="@string/menu_inmuebles"
        tools:layout="@layout/fragment_inmueble">
        <!-- Inmuebles -> Contratos -->
        <action
            android:id="@+id/action_nav_inmuebles_to_nav_contratos"
            app:destination="@id/nav_contratos" />
    </fragment>

    <!-- NUEVO: Contratos (Alquiler) -->
    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.example.inmobiliaria.ui.contratos.ContratosFragment"
        android:label="@string/menu_contratos"
        tools:layout="@layout/fragment_contratos">
        <argument
            android:name="inmuebleId"
            app:argType="integer" />
        <!-- Contratos -> Pagos -->
        <action
            android:id="@+id/action_nav_contratos_to_nav_pagos"
            app:destination="@id/nav_pagos" />
    </fragment>

    <!-- NUEVO: Pagos -->
    <fragment
        android:id="@+id/nav_pagos"
        android:name="com.example.inmobiliaria.ui.pagos.PagosFragment"
        android:label="@string/menu_pagos"
        tools:layout="@layout/fragment_pagos">
        <argument
            android:name="contratoId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/cambiarClaveFragment"
        android:name="com.example.inmobiliaria.ui.perfil.CambiarClaveFragment"
        android:label="@string/menu_cambiar_clave"
        tools:layout="@layout/fragment_cambiar_clave" />
</navigation>
