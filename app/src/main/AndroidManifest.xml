<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Inmobiliaria">

        <!-- MenÃº como pantalla inicial -->
        <activity
            android:name=".ui.menu.MenuActivity"
            android:exported="true"
            android:label="@string/menu_menu"
            android:theme="@style/Theme.Inmobiliaria.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login normal (sin ser launcher) -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/menu_login"
            android:theme="@style/Theme.Inmobiliaria.NoActionBar" />

        <!-- (Opcional) MainActivity sin usar -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Inmobiliaria" />
    </application>
</manifest>
